@model UserMessage

@{
    ViewData["Title"] = "MessageComments";
}

<h1>Comments for </h1>
<form method="post" class="form-horizontal" role="form">
    <label for="userName">For user: @ViewBag.CommentForUser</label><br />
    <label for="commentText">Your comment</label><br />
    <textarea type="text" name="commentText" required="required"></textarea><br />
    @Html.HiddenFor(m => m.MessageID)

    <input type="submit" value="Enter" />
</form>

<a href="MessageResponses">Back to messages</a>

